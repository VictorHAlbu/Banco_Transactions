<div class="page-header">
  <%= link_to new_bank_account_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Bank account
  <% end %>
  <h1>Listing bank_accounts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Balance</th>
            <th>Account number</th>
            <th>Clientes</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @bank_accounts) do |bank_account| %>
            <td><%= bank_account.balance %></td>
            <td><%= bank_account.account_number %>
            <%= link_to client_path(bank_account.id) do  {bank_account.client} %>
            </td>
            <td><%= bank_account.clientes %>
            <%= link_to client_path(bank_account.id) do {bank_account.client} %>
            </td>
            <td><%= link_to 'Show', bank_account_path(bank_account.id) %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account.id) %></td>
        <td><%= link_to 'Destroy', bank_account_path(bank_account.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
